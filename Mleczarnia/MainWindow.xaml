<Window x:Class="Mleczarnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mleczarnia"
        mc:Ignorable="d"
        Title="Menu" Height="500" Width="550" MinHeight="450" MinWidth="470" Background="#FF83FF80" Foreground="Black">
      <Grid Margin="5px">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" FontSize="48" FontWeight="Bold" FontFamily="Tw Cen MT Condensed" HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="System zarządzania mleczarnią"/></TextBlock>
        <Button Style="{StaticResource RoundedButtonStyle}" Grid.Row="1" Background="#FFCBFFC9" Grid.Column="0" Margin="5px" Padding="2px" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click" x:Name="gospodarstwa">
            <StackPanel Orientation="Horizontal">
                <Image Height="76" Source="appbar.group.png" Stretch="Fill" Width="76"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Gospodarze</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="5px" Padding="2px"  FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_6" Background="#FFCBFFC9" Style="{StaticResource RoundedButtonStyle}" x:Name="dostawy">
            <StackPanel Orientation="Horizontal">
                <Image Height="76" Source="appbar.truck.png" Stretch="Fill" Width="76"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Dostawy</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="2" Grid.Column="0" Margin="5px" Padding="2px" Background="#FFCBFFC9" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_1" Style="{StaticResource RoundedButtonStyle}" x:Name="produkty">
            
            <StackPanel Orientation="Horizontal">
                <Image Height="76" Source="appbar.food.png" Stretch="Fill" Width="76"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Produkty</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="2" Grid.Column="1" Margin="5px" Padding="2px" Background="#FFCBFFC9" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_2" Style="{StaticResource RoundedButtonStyle}" x:Name="produkcja">
            
            <StackPanel Orientation="Horizontal">
                <Image Height="65" Source="appbar.cogs.png" Stretch="Fill" Width="65"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Produkcja</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="3" Grid.Column="0" Margin="5px" Padding="2px" Background="#FFCBFFC9" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_3" Style="{StaticResource RoundedButtonStyle}" x:Name="sprzedaz">
            
            <StackPanel Orientation="Horizontal">
                <Image Height="76" Source="appbar.billing.png" Stretch="Fill" Width="76"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Sprzedaż</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="3" Grid.Column="1" Margin="5px" Padding="2px" Background="#FFCBFFC9" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_4" Style="{StaticResource RoundedButtonStyle}" x:Name="statystyki">
           
            <StackPanel Orientation="Horizontal">
                <Image Height="76" Source="appbar.clipboard.variant.edit.png" Stretch="Fill" Width="76"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Statystyki</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="4" Grid.ColumnSpan="2" Margin="5px" Padding="2px" Background="#FFCBFFC9" FontFamily="Tw Cen MT Condensed" FontSize="36" Click="Button_Click_5" Style="{StaticResource RoundedButtonStyle}" x:Name="wyjscie" >
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36">Wyjście</TextBlock>
                <Image Height="76" Source="exit.png" Stretch="Fill" Width="76"/>
            </StackPanel>
            

        </Button>

    </Grid>
</Window>
