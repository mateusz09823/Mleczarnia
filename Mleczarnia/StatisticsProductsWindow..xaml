        <Button Grid.Row="3" Grid.Column="1" Margin="5,5,6.8,5.4" Padding="2px" FontFamily="Tw Cen MT Condensed" FontSize="24" VerticalAlignment="Center" Click="Button_Click_1">Eksprotuj</Button>
